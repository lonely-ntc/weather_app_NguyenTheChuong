<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/widget_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading City..."
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--Â°"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/widget_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wait for sync..."
        android:textColor="#CCCCCC"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        
        <TextView android:id="@+id/h1_time" android:text="--" android:textColor="#EEE" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/h2_time" android:text="--" android:textColor="#EEE" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/h3_time" android:text="--" android:textColor="#EEE" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>